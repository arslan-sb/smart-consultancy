---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Expert Tax Services",
    subTitle:
      "Navigating tax regulations can be overwhelming. With our professional tax services, we guide you through every aspect, ensuring compliance while maximizing deductions. Whether you're an individual taxpayer or a complex business entity, our experts provide tailored tax preparation, planning, and resolution services to minimize your tax burden while staying compliant with constantly changing regulations.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Tax professional reviewing tax documents with client",
    imgTwo: personWorking,
    imgTwoAlt: "Person working on tax calculations",
  },
  {
    isRightSection: false,
    title: "Strategic Financial Advisory",
    subTitle:
      "Our skilled financial advisors bring precision and foresight to every financial decision. From retirement planning to investment strategies, Smart Consultancy offers reliable advisory services to turn your financial goals into reality. We ensure the highest standards of fiduciary responsibility, utilizing comprehensive analysis and industry expertise to guide your financial future.",
    img: beforeAfter,
    imgAlt: "Financial advisor meeting with clients",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Comprehensive Bookkeeping",
    subTitle:
      "Accurate financial records are the foundation of sound business decisions. Smart Consultancy provides thorough bookkeeping services that keep your finances organized and compliant. Let us handle the complexities of transaction recording, reconciliation, and financial reporting while you focus on growing your business.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Bookkeeper organizing financial records",
    imgTwo: aerialView,
    imgTwoAlt: "Overview of financial statements and reports",
  },
  {
    isRightSection: false,
    title: "Ongoing Financial Support",
    subTitle:
      "Our commitment to your financial success doesn't end after service delivery. Smart Consultancy offers continuous support to ensure your financial strategy remains effective. From regular check-ins to rapid response for financial questions, our responsive team provides seamless support throughout your financial journey.",
    img: usingTools,
    imgAlt:
      "Financial professional providing support to client",
  },
  {
    isRightSection: true,
    title: "Custom Enterprise Solutions",
    subTitle:
      "For our larger corporate clients, Smart Consultancy offers custom financial solutions designed to meet specific industry challenges. By understanding your unique business model, we engineer tailored strategies aimed at optimizing your financial operations, enhancing efficiency, and driving your business forward.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Corporate financial planning session",
    imgTwo: underConstruction,
    imgTwoAlt: "Financial transformation in progress",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Expert Consultation Services | ScrewFast",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://screwfast.uk",
        "name": "ScrewFast",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At ScrewFast, we take pride in providing comprehensive solutions and exceptional service in the hardware and construction industry. Our experienced team is dedicated to supporting your project from inception to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At ScrewFast, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with ScrewFast as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
